<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/activityprompt_shape_bg"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:text="友 情 提 示"
            android:textColor="#e2750f"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/activity_prompt_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginRight="28dp"
            android:lineSpacingExtra="5dp"
            android:textColor="#585657"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/activityprompt_know"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/activityprompt_shape_btn_bg"
            android:paddingBottom="10dp"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:textAlignment="center"
            android:paddingTop="10dp"
            android:text="朕 知 道 了"
            android:textColor="#595758"
            android:textSize="18sp" />
    </LinearLayout>

</RelativeLayout>