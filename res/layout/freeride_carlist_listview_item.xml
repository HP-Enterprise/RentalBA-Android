<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"   
    android:orientation="vertical" >

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/page_line1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingTop="12dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="16dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp" >

           <ImageView
                    android:id="@+id/a_picture"
                    android:layout_width="75dp"
                    android:layout_height="50dp"
                    android:src="@drawable/carlist_logo" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/a_model"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中华H330-1.5手动挡"
                    android:textColor="@color/page_text_normal2"
                    android:textSize="@dimen/page_textsize" />

                <TextView
                    android:id="@+id/a_note"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="手动/3厢/5座"
                    android:textColor="@color/page_text_normal2"
                    android:textSize="@dimen/page_textsize" 
                    android:visibility="gone"/>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/page_line1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white"
            android:orientation="horizontal"
            android:paddingTop="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="12dp"
            android:visibility="visible" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical" 
                >

                <TextView
                    android:id="@+id/b_take_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:clickable="true"
                    android:text="温州"
                    android:textColor="@color/page_text_normal_bolder"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/b_take_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06-21 周二"
                    android:textColor="@color/page_text_normal2"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/b_money"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="￥100"
                    android:textColor="@color/page_text_select"
                    android:textSize="16dp" />

                <LinearLayout
                    android:layout_width="110dp"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/freeride_list_icon"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/b_days"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/page_text_normal"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/b_return_city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="天津"
                    android:textColor="@color/page_text_normal_bolder"
                    android:textSize="16dp" />

                <TextView
                    android:id="@+id/b_return_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06-24 周五"
                    android:textColor="@color/page_text_normal2"
                    android:textSize="14dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/page_line1" />

</LinearLayout>