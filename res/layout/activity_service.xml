<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_bg2"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <!-- 第x栏：必选服务 -->

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="bottom"
        android:paddingBottom="3dp"
        android:paddingLeft="16dp"
        android:text="必选服务"
        android:textColor="@color/page_text_normal1"
        android:textSize="14dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/page_line1" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="手续费"
                android:textColor="@color/page_text_normal2"
                android:textSize="14dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:background="@color/page_line1" />

            <TextView
                android:id="@+id/poundageAmount_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="36"
                android:gravity="left"
                android:text=""
                android:textColor="@color/page_text_normal2"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/poundageAmount_all"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="right"
                android:text=""
                android:textColor="@color/page_text_select"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/page_line1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="基本保险费"
                android:textColor="@color/page_text_normal2"
                android:textSize="14dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:background="@color/page_line1" />

            <TextView
                android:id="@+id/money_baoxian_detail"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="36"
                android:gravity="left"
                android:text=""
                android:textColor="@color/page_text_normal2"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/money_baoxian_count"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="14"
                android:gravity="right"
                android:text=""
                android:textColor="@color/page_text_select"
                android:textSize="14dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/page_line1" />

        <TextView
            android:id="@+id/preAmount_tv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:text=""
            android:textColor="@color/page_text_normal"
            android:textSize="12dp" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/page_line1" />

    <!-- 第x栏：必选服务 -->

    <LinearLayout
        android:id="@+id/mustAmount_lin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="bottom"
            android:paddingBottom="3dp"
            android:paddingLeft="16dp"
            android:text="可选服务"
            android:textColor="@color/page_text_normal1"
            android:textSize="14dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/page_line1" />

        <ListView
            android:id="@+id/listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:cacheColorHint="@android:color/transparent"
            android:divider="@color/page_line1"
            android:dividerHeight="1dp"
            android:fadingEdge="none"
            android:listSelector="@android:color/transparent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:scrollbars="none" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/page_line1" />
    </LinearLayout>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="bottom"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:text="支付方式"
        android:textColor="@color/page_text_normal1"
        android:textSize="14dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="16dp" >

        <TextView
            android:id="@+id/payway_online"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/service_bg_normal"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp"
            android:text="在线支付"
            android:textColor="@color/page_text_normal2" />

        <TextView
            android:id="@+id/payway_store"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:background="@drawable/service_bg_select"
            android:clickable="true"
            android:gravity="center"
            android:paddingBottom="6dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="6dp"
            android:text="门店支付"
            android:textColor="@color/page_text_select" />
    </LinearLayout>

    <TextView
        android:id="@+id/tip"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="18dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="提示 : 在线支付订单请2小时内付款,逾期订单将自动取消"
        android:textColor="@color/page_text_select"
        android:textSize="12dp"
        android:visibility="gone" />
    <!-- 下一步 -->

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:background="@color/page_line1"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ffffff"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="8dp"
            android:paddingTop="8dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:text="开具发票"
                android:textColor="@color/page_text_normal2"
                android:textSize="14dp" />

            <View
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:layout_marginRight="8dp"
                android:background="@color/page_line1" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:orientation="vertical" >
            </LinearLayout>

            <ToggleButton
                android:id="@+id/take_ok"
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:background="@drawable/f1_toggle"
                android:checked="false"
                android:text=""
                android:textOff=""
                android:textOn="" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/page_line1"
        android:visibility="gone" />

    <Button
        android:id="@+id/ok"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/city_hot_item_bg"
        android:text="下一步"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>