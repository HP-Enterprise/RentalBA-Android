<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F6F8F7"
    android:orientation="vertical" >

    <!-- 第x栏：必选服务 -->

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/page_show" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/page_line1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="16dp"
                    android:paddingTop="6dp" >

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginRight="6dp"
                        android:src="@drawable/f_icon_take" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:gravity="center_vertical"
                        android:text="取车城市"
                        android:textColor="@color/page_text_select"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="8dp"
                        android:background="#D6D6D6" />

                    <LinearLayout
                        android:id="@+id/take_city_lin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/take_city"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="12dp"
                            android:text="请选择用车城市"
                            android:textColor="@color/page_text_select"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/f1_down" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/page_line1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="16dp"
                    android:paddingTop="6dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="22dp"
                        android:text="航空公司"
                        android:textColor="@color/page_text_normal"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="8dp"
                        android:background="#D6D6D6" />

                    <EditText
                        android:id="@+id/company"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:ellipsize="end"
                        android:hint="请输入航空公司"
                        android:inputType="text"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:singleLine="true"
                        android:textColor="@color/page_text_normal"
                        android:textColorHint="@color/page_text_normal"
                        android:textCursorDrawable="@drawable/register_edit_corsor"
                        android:textSize="14dp" >
                    </EditText>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/page_line1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="16dp"
                    android:paddingTop="6dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="22dp"
                        android:text="机场"
                        android:textColor="@color/page_text_normal"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="8dp"
                        android:background="#D6D6D6" />

                    <EditText
                        android:id="@+id/airport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="请输入机场"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:singleLine="true"
                        android:textColor="@color/page_text_normal"
                        android:textColorHint="@color/page_text_normal"
                        android:textCursorDrawable="@drawable/register_edit_corsor"
                        android:textSize="14dp" >
                    </EditText>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/page_line1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="16dp"
                    android:paddingTop="6dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="22dp"
                        android:text="航班号"
                        android:textColor="@color/page_text_normal"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="8dp"
                        android:background="#D6D6D6" />

                    <EditText
                        android:id="@+id/number"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:hint="请输入航班号"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:singleLine="true"
                        android:textColor="@color/page_text_normal"
                        android:textColorHint="@color/page_text_normal"
                        android:textCursorDrawable="@drawable/register_edit_corsor"
                        android:textSize="14dp" >
                    </EditText>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/page_line1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="16dp"
                    android:paddingTop="6dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="22dp"
                        android:text="送达地点"
                        android:textColor="@color/page_text_normal"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="8dp"
                        android:background="#D6D6D6" />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:hint="请输入送达地点"
                        android:lines="1"
                        android:paddingLeft="12dp"
                        android:singleLine="true"
                        android:textColor="@color/page_text_normal"
                        android:textColorHint="@color/page_text_normal"
                        android:textCursorDrawable="@drawable/register_edit_corsor"
                        android:textSize="14dp"
                        android:focusable="false"  
           				android:focusableInTouchMode="false" >
                    </EditText>
                </LinearLayout>
				
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/page_line1" />
				
                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="16dp"
                    android:paddingTop="6dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="22dp"
                        android:text="接机日期"
                        android:textColor="@color/page_text_normal"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="8dp"
                        android:background="#D6D6D6" />

                    <LinearLayout
                        android:id="@+id/take_date_lin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/take_date"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="12dp"
                            android:text="请输入接机日期"
                            android:textColor="@color/page_text_normal"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/f1_down" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="44dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/page_line1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="6dp"
                    android:paddingLeft="22dp"
                    android:paddingRight="16dp"
                    android:paddingTop="6dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:gravity="center_vertical"
                        android:paddingLeft="22dp"
                        android:text="接机时间"
                        android:textColor="@color/page_text_normal"
                        android:textSize="12dp" />

                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="fill_parent"
                        android:layout_marginRight="8dp"
                        android:background="#D6D6D6" />

                    <LinearLayout
                        android:id="@+id/take_time_lin"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:gravity="center"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/take_time"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="12dp"
                            android:text="请输入接机时间"
                            android:textColor="@color/page_text_normal"
                            android:textSize="14dp" />

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/f1_down" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/page_line1" />

        <Button
            android:id="@+id/ok"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/city_hot_item_bg"
            android:text="提交"
            android:textColor="@color/white"
            android:textSize="16dp" />
    </LinearLayout>

</LinearLayout>