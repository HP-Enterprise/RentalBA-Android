<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_bg2"
    android:orientation="vertical" >

    <com.gjcar.view.widget.CustomerScrollview_QQ
        android:id="@+id/order_all"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:visibility="gone" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="visible" >

                <!-- 上部分 -->

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/page_line1" />

                <TextView
                    android:id="@+id/pay_state"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="8dp"
                    android:paddingTop="8dp"
                    android:text="订单状态：待付款"
                    android:textColor="@color/page_text_select"
                    android:textSize="16dp" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/page_line1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取车证件"
                        android:textColor="@color/page_text_normal2"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/pay_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text=""
                        android:textColor="@color/page_text_normal2"
                        android:textSize="14dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/page_line1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="支付方式"
                        android:textColor="@color/page_text_normal2"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/pay_way"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:text=""
                        android:textColor="@color/page_text_normal2"
                        android:textSize="14dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/page_line1" />

                <LinearLayout
                    android:id="@+id/pay_money_lin"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingLeft="20dp"
                        android:paddingTop="8dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="支付金额"
                            android:textColor="@color/page_text_normal2"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/pay_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="30dp"
                            android:text="￥289"
                            android:textColor="@color/page_text_select"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/page_line1" />

                    <Button
                        android:id="@+id/pay_ok"
                        android:layout_width="fill_parent"
                        android:layout_height="30dp"
                        android:layout_marginBottom="16dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/city_hot_item_bg"
                        android:text="确认支付"
                        android:textColor="@color/white"
                        android:textSize="16dp" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/page_line1" />
                </LinearLayout>
            </LinearLayout>
            <!-- 下部分 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="10dp"
                android:background="@color/page_line1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="8dp"
                    android:visibility="visible" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="订单编号："
                        android:textColor="@color/page_text_normal2"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/a_orderId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="123456789001"
                        android:textColor="@color/page_text_normal2"
                        android:textSize="14dp" />
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/page_line1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:paddingBottom="16dp"
                    android:paddingTop="16dp"
                    android:visibility="visible" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="12dp"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/a_picture"
                            android:layout_width="75dp"
                            android:layout_height="50dp"
                            android:src="@drawable/carlist_logo" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/a_model"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="中华H330-1.5手动挡"
                            android:textColor="@color/page_text_normal2"
                            android:textSize="@dimen/page_textsize" />

                        <TextView
                            android:id="@+id/a_note"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="手动/3厢/5座"
                            android:textColor="@color/page_text_normal2"
                            android:textSize="@dimen/page_textsize" />
                    </LinearLayout>
                </LinearLayout>
                <!-- 线 -->

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/page_line1" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:orientation="horizontal"
                    android:paddingBottom="8dp"
                    android:paddingLeft="16dp"
                    android:paddingRight="12dp"
                    android:visibility="visible" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="取车时间"
                            android:textColor="@color/page_text_normal2"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/b_take_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:text="04—20"
                            android:textColor="@color/page_text_normal_bolder"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/b_take_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="周日  16：00"
                            android:textColor="@color/page_text_normal2"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="66dp"
                        android:layout_weight="1"
                        android:gravity="center" >

                        <LinearLayout
                            android:layout_width="110dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:background="@drawable/order_submit_days_bg"
                            android:gravity="center"
                            android:orientation="vertical" >

                            <TextView
                                android:id="@+id/b_days"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/page_text_select"
                                android:textSize="16dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="天"
                                android:textColor="@color/page_text_normal"
                                android:textSize="12dp" />
                        </LinearLayout>
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="right"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="还车时间"
                            android:textColor="@color/page_text_normal2"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/b_return_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="04-21"
                            android:textColor="@color/page_text_normal_bolder"
                            android:textSize="16dp" />

                        <TextView
                            android:id="@+id/b_return_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="周一  16：00"
                            android:textColor="@color/page_text_normal2"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/page_line1" />
                <!-- 取车城市 -->

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" 
                    android:visibility="visible">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="22dp"
                            android:paddingRight="16dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="8dp"
                                android:gravity="center_vertical"
                                android:text="取车城市"
                                android:textColor="@color/page_text_normal2"
                                android:textSize="14dp" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="8dp"
                                android:background="#D6D6D6" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/c_city"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingBottom="6dp"
                                    android:paddingLeft="12dp"
                                    android:paddingTop="6dp"
                                    android:text=""
                                    android:textColor="@color/page_text_normal1"
                                    android:textSize="14dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/page_line1" />

                        <!-- 送车地点 -->

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="22dp"
                            android:paddingRight="16dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="8dp"
                                android:gravity="center_vertical"
                                android:text="取车地点"
                                android:textColor="@color/page_text_normal2"
                                android:textSize="14dp" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="8dp"
                                android:background="#D6D6D6" />

                            <EditText
                                android:id="@+id/c_address"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:clickable="true"
                                android:ellipsize="end"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint=""
                                android:inputType="none"
                                android:paddingBottom="6dp"
                                android:paddingLeft="12dp"
                                android:paddingTop="6dp"
                                android:textColor="@color/page_text_normal1"
                                android:textColorHint="@color/page_text_normal1"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/page_line1" />

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:paddingLeft="22dp"
                            android:paddingRight="16dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="8dp"
                                android:gravity="center_vertical"
                                android:text="还车城市"
                                android:textColor="@color/page_text_normal2"
                                android:textSize="14dp" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="8dp"
                                android:background="#D6D6D6" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal" >

                                <TextView
                                    android:id="@+id/c_r_city"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:paddingBottom="6dp"
                                    android:paddingLeft="12dp"
                                    android:paddingTop="6dp"
                                    android:text=""
                                    android:textColor="@color/page_text_normal1"
                                    android:textSize="14dp" />
                            </LinearLayout>
                        </LinearLayout>

                        <View
                            android:layout_width="fill_parent"
                            android:layout_height="1dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/page_line1" />

                        <!-- 送车地点 -->

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="22dp"
                            android:paddingRight="16dp" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginRight="8dp"
                                android:gravity="center_vertical"
                                android:text="还车地点"
                                android:textColor="@color/page_text_normal2"
                                android:textSize="14dp" />

                            <View
                                android:layout_width="0.5dp"
                                android:layout_height="fill_parent"
                                android:layout_marginBottom="8dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginTop="8dp"
                                android:background="#D6D6D6" />

                            <EditText
                                android:id="@+id/c_r_address"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:background="#ffffff"
                                android:clickable="true"
                                android:ellipsize="end"
                                android:focusable="false"
                                android:focusableInTouchMode="false"
                                android:hint=""
                                android:inputType="none"
                                android:paddingBottom="6dp"
                                android:paddingLeft="12dp"
                                android:paddingTop="6dp"
                                android:textColor="@color/page_text_normal1"
                                android:textColorHint="@color/page_text_normal1"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:background="@color/page_line1" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@color/page_line1" />
            </LinearLayout>
            <!-- 第x栏：费用栏 -->

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/page_bg2"
                android:paddingBottom="4dp"
                android:paddingLeft="16dp"
                android:paddingTop="8dp"
                android:text="费用明细"
                android:textColor="@color/page_text_normal1"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/page_line1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff"
                android:orientation="vertical"
                android:paddingLeft="16dp"
                android:paddingRight="16dp" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="车辆租赁及门店服务费"
                            android:textColor="@color/page_text_normal2"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:layout_marginBottom="6dp"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:layout_marginTop="6dp"
                            android:background="@color/page_line1" />

                        <TextView
                            android:id="@+id/d_service_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="left"
                            android:text=""
                            android:textColor="@color/page_text_normal2"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/d_service_all"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/page_text_select"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/page_line1" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="8dp"
                        android:paddingTop="8dp" >

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:text="基本保险费"
                            android:textColor="@color/page_text_normal2"
                            android:textSize="14dp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="fill_parent"
                            android:layout_marginLeft="12dp"
                            android:layout_marginRight="12dp"
                            android:background="@color/page_line1" />

                        <TextView
                            android:id="@+id/d_base_detail"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:gravity="left"
                            android:text=""
                            android:textColor="@color/page_text_normal2"
                            android:textSize="14dp" />

                        <TextView
                            android:id="@+id/d_base_all"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:gravity="right"
                            android:text=""
                            android:textColor="@color/page_text_select"
                            android:textSize="14dp" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="@color/page_line1" />

                    <LinearLayout
                        android:id="@+id/d_other_lin"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="visible" >

                        <LinearLayout
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingBottom="8dp"
                            android:paddingTop="8dp" >

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="2"
                                android:text="超时费"
                                android:textColor="@color/page_text_normal2"
                                android:textSize="14dp" />

                            <View
                                android:layout_width="1dp"
                                android:layout_height="fill_parent"
                                android:layout_marginLeft="12dp"
                                android:layout_marginRight="12dp"
                                android:background="@color/page_line1" />

                            <TextView
                                android:id="@+id/d_other_detail"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="3"
                                android:gravity="left"
                                android:text=""
                                android:textColor="@color/page_text_normal2"
