<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.gjcar.view.widget.CustomerScrollview_QQ
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true" 
        android:visibility="gone">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#f7f7f8"
            android:orientation="vertical" >

            <!-- 温馨提示 -->


            <!-- 车辆信息 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/page_line1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:visibility="visible" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_marginRight="12dp"
                    android:layout_weight="2"
                    android:gravity="center" >

                    <ImageView
                        android:id="@+id/a_picture"
                        android:layout_width="75dp"
                        android:layout_height="50dp"
                        android:src="@drawable/carlist_logo" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/a_2city"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="郑州  - 济南"
                        android:textColor="@color/page_text_normal1"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/a_model"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="别克新君越"
                        android:textColor="@color/page_text_normal2"
                        android:textSize="@dimen/page_textsize" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/page_line1" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/freeride_distance" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:text="限使用里程"
                            android:textColor="@color/page_text_normal2"
                            android:textSize="@dimen/page_textsize" />

                        <TextView
                            android:id="@+id/a_distance"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="650km"
                            android:textColor="@color/page_text_normal2"
                            android:textSize="@dimen/page_textsize" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/page_line1" />

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/freeride_frul" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="8dp"
                            android:text="燃油/过路费"
                            android:textColor="@color/page_text_normal2"
                            android:textSize="@dimen/page_textsize" />

                        <TextView
                            android:id="@+id/a_note"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:paddingLeft="8dp"
                            android:paddingRight="8dp"
                            android:text="自理"
                            android:textColor="@color/page_text_normal2"
                            android:textSize="@dimen/page_textsize" />
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="6dp"
                        android:layout_marginTop="6dp"
                        android:background="@color/page_line1" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/a_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="4dp"
                android:text="￥100"
                android:textColor="@color/page_text_select"
                android:textSize="16dp" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/page_line1" />
            <!-- 线 -->

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_marginTop="8dp"
                android:background="@color/page_line1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="22dp"
                        android:paddingRight="16dp"
                        android:paddingTop="6dp" >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/f_icon_take" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical"
                            android:text="取车城市"
                            android:textColor="@color/page_text_normal"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="8dp"
                            android:background="#D6D6D6" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/b_take_city"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="12dp"
                                android:text="郑州"
                                android:textColor="@color/page_text_normal"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="44dp"
                        android:layout_marginRight="12dp"
                        android:background="@color/page_line1" />

                    <!-- 送车地点 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="22dp"
                        android:paddingRight="16dp"
                        android:paddingTop="6dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="22dp"
                            android:text="取车门店"
                            android:textColor="@color/page_text_normal"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="8dp"
                            android:background="#D6D6D6" />

                        <TextView
                            android:id="@+id/b_take_store"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingLeft="12dp"
                            android:text="郑州高铁东站店"
                            android:textColor="@color/page_text_normal"
                            android:textSize="14dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/page_line1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="22dp"
                        android:paddingRight="16dp"
                        android:paddingTop="6dp" >

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginRight="6dp"
                            android:src="@drawable/f_icon_return" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical"
                            android:text="还车城市"
                            android:textColor="@color/page_text_normal"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="8dp"
                            android:background="#D6D6D6" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/b_return_city"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="12dp"
                                android:text="济南"
                                android:textColor="@color/page_text_normal"
                                android:textSize="14dp" />
                        </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginLeft="44dp"
                        android:layout_marginRight="12dp"
                        android:background="@color/page_line1" />

                    <!-- 送车地点 -->

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:paddingBottom="6dp"
                        android:paddingLeft="22dp"
                        android:paddingRight="16dp"
                        android:paddingTop="6dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginRight="8dp"
                            android:gravity="center_vertical"
                            android:paddingLeft="22dp"
                            android:text="还车门店"
                            android:textColor="@color/page_text_normal"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="0.5dp"
                            android:layout_height="fill_parent"
                            android:layout_marginRight="8dp"
                            android:background="#D6D6D6" />

                        <LinearLayout
                            android:id="@+id/b_return_store_lin"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:gravity="center"
                            android:orientation="horizontal" >

                            <TextView
                                android:id="@+id/b_return_store"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:paddingLeft="12dp"
                                android:text="选择门店"
                                android:textColor="@color/page_text_normal2"
                                android:textSize="14dp" />

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginRight="6dp"
                                android:src="@drawable/f1_down" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/page_line1" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/white"
                android:orientation="horizontal"
                android:paddingBottom="8dp"
                android:paddingLeft="16dp"
                android:paddingRight="12dp"
                android:paddingTop="8dp"
                android:visibility="visible" >

                <LinearLayout
                    android:id="@+id/take_time_lin"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="取车时间"
                        android:textColor="@color/page_text_normal"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/b_take_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04—20"
                        android:textColor="@color/page_text_normal2"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/b_take_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周日  16：00"
                        android:textColor="@color/page_text_normal"
                        android:textSize="14dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="110dp"
                        android:layout_height="20dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/freeride_list_icon"
                        android:gravity="center"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/b_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="限租3天"
                            android:textColor="@color/page_text_normal"
                            android:textSize="12dp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="center"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="还车时间"
                        android:textColor="@color/page_text_normal"
                        android:textSize="14dp" />

                    <TextView
                        android:id="@+id/b_return_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="04-21"
                        android:textColor="@color/page_text_normal"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/b_return_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="周一  16：00"
                        android:textColor="@color/page_text_normal"
                        android:textSize="14dp" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="@color/page_line1" />

            <Button
                android:id="@+id/ok"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/city_hot_item_bg"
                android:text="立即预定"
                android:textColor="@color/white"
                android:textSize="16dp" />
        </LinearLayout>
    </com.gjcar.view.widget.CustomerScrollview_QQ>

</LinearLayout>