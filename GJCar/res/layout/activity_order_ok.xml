<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/page_bg2"
    android:orientation="vertical" >

    <!-- 上：成功 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:id="@+id/order_ok_top"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/order_ok_top"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="26dip"
            android:paddingTop="36dip" >

            <ImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@drawable/order_ok" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="10dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:text="订单提交成功 !"
                    android:textColor="@color/page_text_normal"
                    android:textSize="16dp" />

                <LinearLayout
                    android:id="@+id/second_lin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/iv_second"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="6"
                        android:textColor="#eb6001"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="秒后跳转到"
                        android:textColor="@color/page_text_normal"
                        android:textSize="12dp" />

                    <TextView
                        android:id="@+id/orderlist"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:clickable="true"
                        android:text="个人订单中心 "
                        android:textColor="@color/page_text_select"
                        android:textSize="12dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_alignBottom="@id/order_ok_top"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/white" />
    </RelativeLayout>
    <!-- 中：信息 -->

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <View
            android:id="@+id/line_middle_top"
            android:layout_width="fill_parent"
            android:layout_height="10dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#c9caca" />

        <LinearLayout
            android:id="@+id/order_ok_bottom_lin"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/order_ok_bottom"
            android:orientation="vertical"
            android:paddingBottom="26dip"
            android:paddingLeft="36dp"
            android:paddingTop="20dp" >

            <TextView
                android:id="@+id/iv_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中华H330-1.5手动挡，租期为2天 "
                android:textColor="#333333"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/iv_orderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:paddingTop="6dp"
                android:text="订单号：1165794802"
                android:textColor="#666666"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/iv_payway"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="6dp"
                android:text="支付方式：门店支付 "
                android:textColor="#666666"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/iv_acount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="订单总价：￥510.00 "
                android:textColor="#666666"
                android:textSize="12dp" />
        </LinearLayout>
    </RelativeLayout>
    <!-- 下：支付宝 -->

    <LinearLayout
        android:id="@+id/pay_line"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#f6f6f6"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/page_line1" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="12dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="12dp" >

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:src="@drawable/alipay_logo" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="支付宝支付"
                android:textColor="@color/page_text_normal"
                android:textSize="16dp" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/alipay_ok" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/page_line1" />
    </LinearLayout>

    <Button
        android:id="@+id/ok"
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/city_hot_item_bg"
        android:gravity="center"
        android:text="确定支付"
        android:textColor="@color/white"
        android:textSize="16dp" />

</LinearLayout>